		<text
		name="distance_multiplier_label"
		follows="left|top"
		height="15"
		layout="topleft"
		left="5"
		width="100">
		Distance Multiplier:
		</text>

		<slider
		decimal_digits="2"
		follows="left|top"
		height="16"
		increment="0.01"
		initial_value="0.8"
		layout="topleft"
		min_val="0"
		max_val="1000"
		name="distance_multip"
		left_pad="0"
		width="171"
