		word_wrap="true">
		Reflection Probe Ambiance (HDR):
		</text>

		<slider
		decimal_digits="2"
		follows="left|top"
		height="16"
		increment="0.5"
		initial_value="0"
		layout="topleft"
		max_val="100"
		name="probe_ambiance"
		left_pad="0"
		width="171"
		can_edit_text="true"/>
