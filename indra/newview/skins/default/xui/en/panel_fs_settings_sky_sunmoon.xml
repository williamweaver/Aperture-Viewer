		<panel
		name="P_Moon_Setting"
		follows="left|top"
		layout="topleft"
		top_pad="1"
		left="3"
		width="280"
		height="125"
		border_visible="true"
		background_visible="true">

			<text
			name="moon_image_label"
			follows="left|top"
			height="10"
			layout="topleft"
			left="5"
			top_pad="5"
			width="180">
