			<text
			name="moon_elevation_label"
			follows="left|top"
			height="15"
			layout="topleft"
			left="5"
			width="55">
			Elevation:
			</text>

			<slider
			decimal_digits="2"
			follows="left|top"
			height="16"
			increment="0.01"
			initial_value="0"
			layout="topleft"
			min_val="-90"
			max_val="90"
			name="moon_elevation"
			left_pad="0"
			width="215"
			can_edit_text="true"/>
		</panel>
</panel>
